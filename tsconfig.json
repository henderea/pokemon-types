{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": false,
    "strict": true,
    "lib": [
      "es2015",
      "dom",
      "esnext"
    ],
    "types": [
      "lodash",
      "knockout"
    ],
    "baseUrl": ".",
    "paths": {
      "lib/*": [
        "lib/*"
      ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./ts-types"
    ],
    "allowSyntheticDefaultImports": true,
    "sourceMap": true
  },
  "include": [
    "src/**/*.ts",
    "lib/**/*.ts",
    "ts-types/**/*.ts"
  ]
}